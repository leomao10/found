<% form_for :address, post.address, :url => post_address_path(post), :html=>{:class =>"ajaxForm",:id=>"address_form"} do |f| %>
  <label>
    <span class="label">Unit No.</span>
    <span class="input"><%= f.text_field :line1,:class=>"text" %></span>
    <span class="hint"><span class="hint_icon" ></span>must be numbers</span>
  </label>
  <label>
    <span class="label">Street No.</span>
    <span class="input"><%= f.text_field :line2, :class=>"text" %></span>
    <span class="hint"><span class="hint_icon" ></span>must be 6 or more characters</span>
  </label>
  <label><span class="label"></span><%= f.submit "Save", :class=>"save" %></label>
<%end%>