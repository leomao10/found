<% title "Suburbs" %>

<table>
  <tr>
    <th>Suburb</th>
    <th>Area</th>
    <th>State</th>
    <th>Postcode</th>
  </tr>
  <% for suburb in @suburbs %>
    <tr>
      <td><%=h suburb.name %></td>
      <td><%=h suburb.area %></td>
      <td><%=h suburb.state %></td>
      <td><%=h suburb.postcode %></td>
      <td><%= link_to "Show", suburb %></td>
      <td><%= link_to "Edit", edit_suburb_path(suburb) %></td>
      <td><%= link_to "Destroy", suburb, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Suburb", new_suburb_path %></p>
