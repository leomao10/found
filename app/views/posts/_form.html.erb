<div class ="full_container post_form">
  <div class="address_field">
    <h1>Address</h1>
    <% form_for([:post, :post.address]) do |address_form| %>
      <%= render "addresses/form", :f =>address_form %>
      <%= f.submit "Submit" %>
    <%end%>
  </div>
  <% form_for :post do |f| %>
    <%= f.error_messages %>
    <div class="property_field">
      <h1>Property</h1>
      <% f.fields_for :property do |property_form| %>
        <%= render "properties/form", :f =>property_form %>
      <%end%>
    </div>
    <div class="images">
      <h1>Images</h1>
    </div>

    <div class="line">
      <div class="field_20">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="line" style="height: 320px;">
      <div class="field_20">
        <%= f.label :description %>
        <%= f.text_area :description %>
      </div>
    </div>
    <div class="line">
      <div class="field_20">
        <%= f.label :available_from %>
        <%= f.text_field :available_from , :class => "startdatepick",:id => "post_start_date", :end_date => "post_end_date"%>
      </div>
    </div>
    <div class="line">
      <div class="field_20">
        <%= f.label :expiry_date %>
        <%= f.text_field :expiry_date, :class => "enddatepick",:id => "post_end_date", :end_date => "post_start_date"%>
      </div>
    </div>
    <div class="line">
      <div class="field_20">
        <%= f.label :inspection_time %> <%= f.text_field :inspection_time %>
      </div>
    </div>
    <div class="line" >
      <label>negotiable </label>
      <%= f.check_box :negotiable %>
    </div>
    <div class="line">
      <div class="field_20">
        <%= f.submit "Submit" %>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $('.post_form :checkbox').iphoneStyle();
</script>