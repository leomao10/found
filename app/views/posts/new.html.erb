<% content_for :script do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $("a.modified").bind('click', function(){
        var $target= $(this).parents('div.form_section');
        var $targetBody = $target.find('div.section_body');

        $target.removeClass("section_finished");

        var $targets = $('div.form_section');
        $targets.each(function(){
          if($targets.index(this) != $targets.index($target)){
            $(this).removeClass("first_section");
          }else{
            $(this).addClass("first_section");
          }
        });
        
        var $bodies= $('div.form_section div.section_body');
        $bodies.each(function(){
          if($bodies.index(this) == $bodies.index($targetBody.get(0))){
            if ($(this).is(':hidden')){
              $(this).slideDown();
            }
          }else if (!$(this).is(':hidden')){
            $(this).slideToggle();
          }
        });
      });
    });
  </script>
<% end %>

