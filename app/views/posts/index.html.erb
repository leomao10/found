<% title "Posts" %>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Available From</th>
    <th>Expiry Date</th>
    <th>Inspection Time</th>
    <th>Negotiable</th>
  </tr>
  <% for post in @posts %>
    <tr>
      <td><%=h post.title %></td>
      <td><%=h post.description %></td>
      <td><%=h post.available_from %></td>
      <td><%=h post.expiry_date %></td>
      <td><%=h post.inspection_time %></td>
      <td><%=h post.negotiable %></td>
      <td><%= link_to "Show", post %></td>
      <td><%= link_to "Edit", edit_post_path(post) %></td>
      <td><%= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Post", new_post_path %></p>
