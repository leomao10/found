<% title "Images" %>

<table>
  <tr>
    <th>Image File Name</th>
    <th>Image Content Type</th>
    <th>Image File Size</th>
    <th>Image Updated At</th>
    <th>Imagable</th>
    <th>Imagable Type</th>
  </tr>
  <% for image in @images %>
    <tr>
      <td><%=h image.image_file_name %></td>
      <td><%=h image.image_content_type %></td>
      <td><%=h image.image_file_size %></td>
      <td><%=h image.image_updated_at %></td>
      <td><%=h image.imagable_id %></td>
      <td><%=h image.imagable_type %></td>
      <td><%= link_to "Show", image %></td>
      <td><%= link_to "Edit", edit_image_path(image) %></td>
      <td><%= link_to "Destroy", image, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Image", new_image_path %></p>
