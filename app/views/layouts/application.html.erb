<html lang="en-us">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <title>Found Your Home</title>
    <meta name="keywords" content="" />
    <%= stylesheet_link_tag 'application', 'jquery-ui-1.7.2.custom' %>
    <%= javascript_include_tag 'jquery-1.3.2.min', 'jquery-ui-1.7.2.custom.min' %>

    <script type="text/javascript" language="Javascript" charset="UTF-8">
      <!--[CDATA[
      // ]]-->
    </script>
  </head>
  <body id="body" onload="window.focus();">
    <div id="top_bar">
      <div class="inner">
        <div class="general_nav">
          <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">Place An Ad</a></li>
            <li><a href="#">My Account</a></li>
            <li><a href="#">Rental Guides</a></li>
          </ul>
        </div>
        <div class="member_nav">
          <ul>
            <% if current_user %>
              <li><%= link_to "Edit Profile", edit_user_path(:current) %></li>
              <li><%= link_to "Logout", logout_path %></li>
            <% else %>
              <li><%= link_to "Register", new_user_path %></li>
              <li><%= link_to "Login", login_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div id="page_body">
      <div id="header">
        <div id="logo"></div>
        <div class="text">
          <h1>Welcome!<br />You're new, aren't you?</h1>
          <h2>FOUND YOUR HOME is a respectful community of young people who look for their next home. We provide the best tools and resource to help you to find your next stay.</h2>
          <h3>Go ahead, start looking...</h3>
        </div>
      </div>
      <div id="content">
        <div id="search">
          <div class="tabs">
            <ul>
              <li class="highlight"><a href="#"><span>Rent</span></a></li>
              <li><a href="#"><span>Share</span></a></li>
              <li><a href="#"><span>Furniture</span></a></li>
              <li><a href="#"><span>Carspace</span></a></li>
            </ul>
          </div>
          <div class="search_panel">
            <form>
              <div class="inner">
                <div class="main">
                  <input type="text" class="keywords" />
                  <input type="submit" value="Search" class="search" />
                </div>
                <label><input type="checkbox" class="checkbox" /> Include surrounding suburbs</label>
                <div class="more_options">
                  <label class="slider_required" min="0" max="2000" step="50">
                    <input value="200" type="hidden" class="min" /><input value="700" type="hidden" class="max" />
                    <span class="text">Price Range: </span>$<span class="value"></span><span class="bar"></span>
                  </label>
                  <label class="slider_required bedroom" min="0" max="10">
                    <input value="1" type="hidden" class="min" /><input value="3" type="hidden" class="max" />
                    <span class="text">Bedroom: </span><span class="value"></span><span class="bar"></span>
                  </label>
                  <label class="slider_required bathroom" min="0" max="4">
                    <input value="1" type="hidden" class="min" /><input value="2" type="hidden" class="max" />
                    <span class="text">Bathroom: </span><span class="value"></span><span class="bar"></span>
                  </label>
                  <label class="slider_required carpark" min="0" max="4">
                    <input value="1" type="hidden" class="min" /><input value="2" type="hidden" class="max" />
                    <span class="text">Carspace: </span><span class="value"></span><span class="bar"></span>
                  </label>
                  <label class="property_type">
                    <span class="text">Property type: </span>
                    <span class="bar">
                      <select>
                        <option value="">Any</option>
                        <option value="">House</option>
                        <option value="">Townhouse</option>
                        <option value="">Unit/Apartment</option>
                        <option value="">Terrace</option>
                      </select>
                    </span>
                  </label>
                </div>
                <a href="#" class="more" hide="Hide search criterias" show="Show more search criterias">Show more search criterias</a>
              </div>
            </form>
          </div>
        </div>
        <%= yield %>
        <div id="search_result">
          <div class="paginate">
            <div class="top">
              <ul>
                <li><a href="#"><span>1</span></a></li>
                <li><a href="#"><span>2</span></a></li>
              </ul>
            </div>
            <ul class="list">
              <li class="item">
                <h4 class="title">Burwood</h4>
                <div class="preview">
                  <div class="picture">Some picture</div>
                  <div class="info"><ul>
                      <li><span class="label"></span><span class="value">$40 per week</span></li>
                      <li><span class="label"></span><span class="value">fasdfasdfasdfsadf</span></li>
                    </ul></div>
                </div>
              </li>
            </ul>
            <div class="bottom">
            </div>
          </div>
          <div id="googlemap">google map
          </div>
        </div>
      </div>
      <div id="footer">
        <ul>
          <li><a href="#">Agent Admin</a></li>
          <li><a href="#">Sign up Your Agency</a></li>
          <li><a href="#">About Us</a></li>
          <li><a href="#">Search Real Estate Agents</a></li>
          <li><a href="#">Contact Us</a></li>
          <li><a href="#">Advertising</a></li>
          <li><a href="#">Privacy Policy</a></li>
          <li><a href="#">Terms &amp; Conditions</a></li>
          <li><a href="#">Disclaimer</a></li>
        </ul>
      </div>
    </div>
